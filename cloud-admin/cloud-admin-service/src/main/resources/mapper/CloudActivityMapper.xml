    <select id="selectByUserId" parameterType="long" resultType="com.jeeadmin.vo.activity.CloudActivityVo">
        SELECT
            ca.*,
            cpm.member_name,
            ce.enclosure_name
        FROM
            cloud_activity ca
            INNER JOIN cloud_activity_party_member capm ON ca.id = capm.activity_id
            inner join cloud_party_member cpm on cpm.id = capm.party_member_id
            inner join cloud_user cu on cu.id = cpm.party_member_id
            INNER JOIN cloud_activity_enclosure cae ON cae.activity_id = ca.id
            INNER JOIN cloud_enclosure ce ON cae.enclosure_id = ce.id

        WHERE
            cu.id = #{id} and ca.activity_status !=2
    </select>


